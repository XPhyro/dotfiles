set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set recolor true
set selection-clipboard clipboard
set sandbox none

set default-bg rgba(0,0,0,0.6)
set recolor-keephue
set recolor-lightcolor rgba(0,0,0,0)

set guioptions ""
set window-title-basename true
set statusbar-basename false

set synctex true
set synctex-editor-command "st -e vim --remote-silent +%{line} %{input}"

map [normal] u scroll half-up
map [normal] d scroll half-down
map [normal] D toggle_page_mode

map [normal] r reload
map [normal] R rotate
map [normal] <A-J> zoom out
map [normal] <A-K> zoom in

map [normal] i recolor

map [normal] <A-i> set "first-page-column 1:1"
map [normal] <A-d> set "first-page-column 2:2"

map [normal] <A-s> set "guioptions s"
map [normal] <A-g> set "guioptions n"
